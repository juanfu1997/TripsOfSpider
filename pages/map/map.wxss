page {
	width: 100%;
	height: 100%;
	background-color: #f3f3f3;
}
#map {
	width: 100%;
	height: 85%;
}

.footer {
	/*height: 15%;*/
    position: relative;
	overflow: hidden;
	background-color: rgba(255,255,255,0.4);
}

.footer .hint {
    border-top: 1px dashed #d1d1d1;
	padding: 10rpx 0;
	width: 100%;
	line-height: 1.3;
	font-size: 25rpx;
	color: rgb(0,109,241);
	position: absolute;
	text-align: center;
	left: 0;
	bottom: 0;
	clear: both;
}

.footer .add {
	/*margin-top: 20rpx;*/
	margin-right: 40rpx;
	overflow: hidden;
	float: right;
    line-height: 1;
	font-size: 25rpx;
}

.footer .add .h2 {
	margin-bottom: 6rpx;
}

.footer .add image {
	width: 50rpx;
}

.footer .button .share {
	line-height: 1;
	/*margin-top: 20rpx;*/
	margin-left: 40rpx;
	float: left;
    font-size: 28rpx;
    color: #fff;
    width: 25%;
    background-color: #79b52e;
	padding: 17rpx 0;
	text-align: center;
	border-radius: 15rpx;
	box-shadow: 2px 2px 4px #ccc;
}

.fail .boy {
	margin-top: 50rpx;
	width: 40%;
}
.fail .text {
	margin: 5px 0 8px;
	text-align: center;
	font-size: 27rpx;
}
.flex_view{
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
}
.page_top{
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	background-color: #ffffff;
}
.tab_box{
	width: 100%;
	display: flex;
	justify-content: space-around;
}
.top_tab{
	font-size: 28rpx;
	padding: 10rpx 30rpx;
	/*background-color: #ccc;*/
	border-radius: 4rpx; 
}	
.page_table{
	width: 100%;
	margin-top: 15rpx;
	background-color: #fff;
	padding: 30rpx;
}
.trip_table{
	display: flex;
	justify-content: flex-start;
	align-self: center;
	width: 90%;
	margin: 0 auto;
}
.trip_time{
	font-size: 24rpx;
	height: 24rpx;
	line-height: 24rpx;
}
.trip_axis{
	position: relative;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: center;
	width: 24rpx;
	margin: 0 10rpx;
	background: url("https://www.korjo.cn/xcx/video_navImg/dot.png") center repeat-y;
}
.trip_axis image{
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translate(-50% ,-50%);
	width: 100%;
	flex-shrink: 0;
}
.axis_dotted{
	width: 2rpx;
	height: 100%;
	flex-shrink: 1;
	border:transparent;
	border-left: 2rpx dotted #ccc;
}
.trip_place{
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: flex-start;
	font-size: 24rpx;
}
.ScenicSpot{
	height: 24rpx;
	line-height: 24rpx;
	color: #2faaf7;
}
.Tips{
	font-size: 24rpx;
	color: #a8a8a8;
	margin-top:10rpx; 
}

.logo{
	width: 28rpx;
	height: 28rpx;
	border-radius: 50%;
	background-color: #2faaf7;
	position: relative;
}
.logo:after{
	content:'';
	width: 18rpx;
	height: 18rpx;
	background-color: #fff;
	border-radius: 50%;
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translate(-50%,-50%);
}
.logo2{
	width: 24rpx;
	height: 24rpx;
	border-radius: 50%;
	background-color: #2faaf7;
	position: relative;
}
.logo2:after{
	content:'';
	width: 10rpx;
	height: 10rpx;
	background-color: #fff;
	border-radius: 50%;
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translate(-50%,-50%);
}
.trips_dateList{
	width: 100%;
	color: #2faaf7;
	background-color: #fff;
	position: absolute;
	bottom: 0;
	display: flex;
	justify-content: space-around;
	align-items: center;
}
.date_box{
	display: inline-block;
	vertical-align: middle;
	margin:0 20rpx;
}
.date_state{
	width: 18rpx;
}
.date_trip{
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	align-items: center;
	margin: 20rpx 0;
}
.date_date{
	font-size: 20rpx;
}
.date_day{
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	align-items: center;
}
.line{
	width: 100rpx;
	height: 2rpx;
	background-color: #a8a8a8;
}
.page_map{
	width: 100%;
	height: 90%; 
	overflow: hidden;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
	flex-grow: 1;
}
.flex_view{
	width: 100%;
	text-align: center;
}
.scroll_view{
	/*height: 145rpx;*/
	white-space: nowrap;
	 display: flex;
	 flex-direction: row;
	 width: 100%;
	 align-items: center;
}
.scroll_view view{
	margin-left:10rpx;
	display: inline-block;
}
.scroll_view view:nth-last-child(1){
	margin-right:10rpx;
}

