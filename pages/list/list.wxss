.wrapper {
	margin: 30rpx 30rpx 100rpx 30rpx;
}

.list {
    padding: 20rpx 0;
	position: relative;
	border-bottom: 1px dashed #d1d1d1;
}

.list .sub_title {
	font-size: 28rpx;
	color: #79b52e;
}

.list .address {
	font-size: 28rpx;
}

.list .firstAddress {
	margin-top: 20rpx;
}

.list .arrow {
	position: absolute;
	width: 50rpx;
	top: 50%;
	right: 0;
	-webkit-transform: translateY(-50%);
	-transform: translateY(-50%);
}

.footer {
	padding: 20rpx 0;
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	background-color: #fff;
	box-shadow: 0 -1px 6px #dcdcdc;
	color: #fff;
	font-size: 28rpx;
}

.footer .button{
    width: 100%;
    display: block;
}

.footer .book {
	background-color: #79b52e;
	padding: 15rpx 0;
	width: 60%;
	margin: 0 auto;
	text-align: center;
	border-radius: 15rpx;
	box-shadow: 2px 2px 4px #ccc;
}